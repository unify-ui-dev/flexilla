{
  "name": "@flexilla/utilities",
  "private": false,
  "version": "2.0.0",
  "type": "module",
  "description": "Utilities package for flexilla library",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/utilities.js",
  "module": "./dist/utilities.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/utilities.js"
      },
      "require": {
        "types": "./dist/utilities.d.ts",
        "default": "./dist/utilities.cjs"
      }
    },
    "./accessibility": {
      "import": {
        "types": "./dist/accessibility.js",
        "default": "./dist/accessibility.d.ts"
      },
      "require": {
        "types": "./dist/accessibility.d.ts",
        "default": "./dist/accessibility.cjs"
      }
    },
    "./toggler": {
      "import": {
        "types": "./dist/toggler.d.ts",
        "default": "./dist/toggler.js"
      },
      "require": {
        "types": "./dist/toggler.d.ts",
        "default": "./dist/toggler.cjs"
      }
    },
    "./selector": {
      "import": {
        "types": "./dist/selector.d.ts",
        "default": "./dist/selector.js"
      },
      "require": {
        "types": "./dist/selector.d.ts",
        "default": "./dist/selector.cjs"
      }
    },
    "./dom-utilities": {
      "import": {
        "types": "./dist/dom-utilities.d.ts",
        "default": "./dist/dom-utilities.js"
      },
      "require": {
        "types": "./dist/dom-utilities.d.ts",
        "default": "./dist/dom-utilities.cjs"
      }
    }
  },
  "files": [
    "dist",
    "package.json",
    "!vite.config.ts",
    "!.gitignore",
    "!tsconfig.json",
    "!biome.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "biome format --write ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0"
  },
  "keywords": [
    "flexilla",
    "flexilla utilities"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/unify-ui-dev/flexilla"
  },
  "bugs": {
    "url": "https://github.com/unify-ui-dev/flexilla/issues"
  },
  "license": "MIT",
  "author": "johnkat-mj"
}
