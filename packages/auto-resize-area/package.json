{
  "name": "@flexilla/auto-resize-area",
  "private": false,
  "version": "2.0.1",
  "type": "module",
  "description": "A lightweight JavaScript component that automatically resizes text areas based on content",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/auto-resize-area.umd.js",
  "module": "./dist/auto-resize-area.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/auto-resize-area.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/auto-resize-area.umd.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "!vite.config.ts",
    "!.gitignore",
    "!tsconfig.json",
    "!biome.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "biome format --write ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0"
  },
  "keywords": [
    "text-area",
    "auto-resize-area",
    "auto resize text-area",
    "js",
    "ts",
    "component",
    "interactive",
    "intercative component",
    "flexilla"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/unify-ui-dev/flexilla"
  },
  "bugs": {
    "url": "https://github.com/unify-ui-dev/flexilla/issues"
  },
  "license": "MIT",
  "author": "johnkat-mj"
}
