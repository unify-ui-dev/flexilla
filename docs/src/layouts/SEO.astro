---
import { siteUrl, side_domain } from "../const";
import { type SeoType } from "@/types/index";

export interface Props {
  seo: SeoType;
}

const {
  seo: { title, ogImage, description, keywords },
} = Astro.props;
---

<meta charset="UTF-8" />
<meta
  name="viewport"
  content="width=device-width, initial-scale=1, maximum-scale=1.0"
/>
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<title>Flexilla - {title}</title>
<meta name="description" content={description} />
<meta name="title" content={`Flexilla ${title}`} />
<meta property="og:url" content={siteUrl} />
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage.src} />
<meta property="og:image:alt" content={ogImage.alt} />
<meta name="og:image:width" content="1728" />
<meta name="og:image:height" content="1117" />

<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:domain" content={side_domain} />
<meta property="twitter:url" content={siteUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage.src} />
<meta name="twitter:image:alt" content={ogImage.alt} />
<meta name="twitter:image:width" content="1728" />
<meta name="twitter:image:height" content="1117" />
<meta name="twitter:creator" content="@johnkat-mj" />

<meta name="application-name" content="Flexilla Website" />
<meta name="keywords" content={keywords} />
<meta name="generator" content={Astro.generator} />
<meta name="author" content="Johnkat-MJ" />
<link rel="creator" href="https://github.com/Johnkat-Mj" />
<meta name="author" content="unifyui-dev" />
<link rel="author" href="https://github.com/unify-ui-dev" />
